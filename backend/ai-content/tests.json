{
  "tests": [
    {
      "name": "Generate image with AIML API",
      "method": "POST",
      "path": "/",
      "body": {
        "type": "image",
        "prompt": "A beautiful sunset over mountains",
        "params": {
          "model": "flux/schnell",
          "size": "1024x1024"
        }
      },
      "expectedStatus": 200,
      "expectedBody": {
        "url": "string",
        "type": "image",
        "provider": "aimlapi"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Generate text with AIML API",
      "method": "POST",
      "path": "/",
      "body": {
        "type": "text",
        "prompt": "Write a short story about space",
        "params": {
          "model": "gpt-4o",
          "max_tokens": 500
        }
      },
      "expectedStatus": 200,
      "expectedBody": {
        "text": "string",
        "type": "text",
        "provider": "aimlapi"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject empty prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "type": "image",
        "prompt": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Prompt is required"
      },
      "bodyMatcher": "partial"
    }
  ]
}