{
  "tests": [
    {
      "name": "Generate image with valid prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": "A futuristic city at night",
        "size": "1024x1024",
        "style": "vivid"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "image_url": "string",
        "prompt": "string",
        "size": "1024x1024",
        "style": "vivid",
        "status": "generated"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject empty prompt",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": ""
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Prompt is required"
      },
      "bodyMatcher": "partial"
    }
  ]
}
