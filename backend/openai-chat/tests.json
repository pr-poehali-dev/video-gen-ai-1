{
  "tests": [
    {
      "name": "Проверка генерации текста",
      "method": "POST",
      "path": "/",
      "body": {
        "prompt": "Напиши короткое приветствие",
        "max_tokens": 100,
        "temperature": 0.7
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "text": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Ошибка при отсутствии prompt",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
